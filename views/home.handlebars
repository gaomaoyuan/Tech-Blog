{{#each posts}}
  <div class="post-preview">
    <a href="/post/{{this.id}}">
      <h2 class="post-title">{{this.title}}</h2>
      <h3 class="post-subtitle">{{this.content}}</h3>
    </a>
    <p class="post-meta">
      Posted by {{this.username}} on {{format_date this.date_created}}
    </p>
  </div>
{{/each}}
